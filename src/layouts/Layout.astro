---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "../styles/app.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Ika" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="data:image/x-icon;," type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container mx-auto text-center max-w-sm md:max-w-2xl">
      <slot />
    </div>
  </body>
</html>
